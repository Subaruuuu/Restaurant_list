<body>
  <header>
    <!-- navigation -->
    <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
      <div class="container">
        <a class="navbar-brand" href="/">
          <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
            width="30" height="30" class="d-inline-block align-top" alt="">
          {{#if isAuthenticated}}{{user.name}}的{{/if}}吃貨地圖
        </a>
        {{#if isAuthenticated}}
        <div>
          <a class="btn btn-outline-primary btn-sm" href="/users/logout" role="button">登出</a>
        </div>
        {{else}}
        <a class="btn btn-outline-primary btn-sm" href="/users/login" role="button">登入</a>
        {{/if}}
      </div>
    </nav>

    <div class="banner"></div>
  </header>


  {{{body}}}

  <script src="/javascripts/popper.min.js"></script>
  <script src="/javascripts/jquery-3.5.1.min.js"></script>
